# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/your_database_name

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Node environment: development, production, test
NODE_ENV=development

# Application port (default: 3000)
PORT=3000

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# JWT secret for signing access tokens
# Generate a strong random string: openssl rand -base64 32
AUTH_JWT_SECRET=your_jwt_secret_key_here

# JWT secret for signing refresh tokens (optional, defaults to AUTH_JWT_SECRET)
AUTH_REFRESH_JWT_SECRET=your_refresh_jwt_secret_key_here

# Alternative: Use JWT_SECRET if AUTH_JWT_SECRET is not set
# JWT_SECRET=your_jwt_secret_key_here

# Access token expiration (default: 15m)
TOKEN_EXPIRATION=15m

# Refresh token expiration (default: 7d)
REFRESH_TOKEN_EXPIRATION=7d

# ============================================
# OAUTH CONFIGURATION
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# OAuth redirect URI (default: http://localhost:3000/api/v1/auth/callback)
OAUTH_REDIRECT_URI=http://localhost:3000/api/v1/auth/callback

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# SMTP server configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_or_app_password

# Email sender information


# ============================================
# BREVO EMAIL API CONFIGURATION
# ============================================
# Brevo (formerly Sendinblue) API key for transactional emails
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here

# Email sender information for Brevo
BREVO_FROM_EMAIL=noreply@yourapp.com
BREVO_FROM_NAME=Your App

# Brevo webhook authentication token (Bearer token)
# Generate a secure random token: openssl rand -base64 32
BREVO_WEBHOOK_TOKEN=your_secure_random_token_here

SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME=Your App

# ============================================
# REDIS CONFIGURATION
# ============================================
# Redis host (default: localhost)
REDIS_HOST=localhost

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis connection URL (default: redis://localhost:6379)
# Use this for cloud Redis services like Redis Cloud, AWS ElastiCache, etc.
# Format: redis://username:password@host:port
REDIS_URL=redis://localhost:6379

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Frontend URL for redirects and email links (default: http://localhost:3000)
FRONTEND_URL=http://localhost:3000

# ============================================
# STRIPE CONFIGURATION
# ============================================
# Stripe secret key (get from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY

# Stripe webhook secret (get from Stripe Dashboard > Webhooks)
STRIPE_WEBHOOK_SECRET=Thykingd0mC0me

# Stripe publishable key (for frontend, document only)
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY

# ============================================
# FIREBASE CLOUD MESSAGING
# ============================================
# Fcm service account key (get from firebase dashboard)
FCM_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account-key.json

# ============================================
# WHATSAPP CLOUD API CONFIGURATION
# ============================================
# Get these from Meta Business Suite > WhatsApp > API Setup
# Documentation: https://developers.facebook.com/docs/whatsapp/cloud-api

# Phone Number ID (from WhatsApp Business Manager)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Permanent Access Token (from App Dashboard > WhatsApp > API Setup)
WHATSAPP_ACCESS_TOKEN=your_permanent_access_token

# WhatsApp Business Account ID
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id

# Webhook Verify Token (create your own secure random string)
# Used for webhook endpoint verification: openssl rand -base64 32
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# App Secret (from App Dashboard > Settings > Basic)
# Used for webhook signature verification (X-Hub-Signature-256)
WHATSAPP_APP_SECRET=your_app_secret
